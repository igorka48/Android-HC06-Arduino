<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/desert_storm"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hc_06.yj.bluetoothapplication.ui.activities.DevicesListActivity"
    tools:showIn="@layout/app_bar">

    <Button android:id="@+id/pair_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:onClick="onPairDeviceBtn"
        android:text="@string/pair_device_first" />

    <TextView android:id="@+id/pair_pass_tv"
        android:layout_below="@+id/pair_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/password_is_1234" />

    <ListView
        android:layout_below="@+id/pair_pass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"/>
</RelativeLayout>